{
  "name": "fbclit/opentextapi",
  "type": "library",
  "description": "A PHP OpenText API Client.",
  "keywords": [
    "api",
    "api-client",
    "opentext",
    "conent server"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Steve Bauman",
      "email": "steven_bauman@outlook.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^7.1.0",
    "ext-json": "*",
    "guzzlehttp/guzzle": "~6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~8.0",
    "mockery/mockery": "~1.0"
  },
  "archive": {
    "exclude": ["/tests"]
  },
  "autoload": {
    "psr-4": {
      "Fbcl\\OpenTextApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Fbcl\\Tests\\": "tests/"
    }
  }
}
